<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.watcharr"
       name="Watcharr"
       version=".5.0.0"
       provider-name="Airdog">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.beautifulsoup4" version="4.6.3"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="script.module.web-pdb" version="1.5.6"/>  ## for fv debugging
  </requires>
  <extension point="xbmc.service" library="default.py"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Watcharr</summary>
    <description lang="en_GB">Automatically set watched episodes on your Watcharr site</description>
    <platform>all</platform>
    <website>https://watcharr.com</website>
    <license>GPL-2.0-only</license>
    <source>https://github.com/maximeh/script.myepisodes</source>
    <email>airwatch at treillis dot mailer dot me</email>
    <assets>
        <icon>icon.png</icon>
    </assets>
  </extension>
</addon>

